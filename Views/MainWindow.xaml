<Window x:Class="CuteCalculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Cute Calculator"
        Width="360"
        Height="540"
        WindowStartupLocation="CenterScreen"
        Background="#FFF7F0FA"
        ResizeMode="NoResize">

    <Window.Resources>

        <!-- ðŸ’— Pink Theme Colors -->
        <Color x:Key="PinkDark">#FFCC6AAC</Color>
        <Color x:Key="PinkMain">#FFF5C8E8</Color>
        <Color x:Key="PinkLight">#FFFFF0F7</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PinkDark}" />
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource PinkLight}" />
        <SolidColorBrush x:Key="ButtonBrush" Color="{StaticResource PinkMain}" />

        <!-- ðŸ’— Cute Rounded Buttons -->
      <Style x:Key="CalcButton" TargetType="Button">
    <Setter Property="FontSize" Value="20"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Margin" Value="5"/>
    <Setter Property="Height" Value="55"/>
    <Setter Property="Background" Value="{StaticResource ButtonBrush}"/>
    <Setter Property="Foreground" Value="#7A306C"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Cursor" Value="Hand"/>

    <!-- Template WITH rounded border -->
    <Setter Property="Template">
        <Setter.Value>
            <ControlTemplate TargetType="Button">
                <Border CornerRadius="18"
                        Background="{TemplateBinding Background}">
                    <ContentPresenter 
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
                </Border>
            </ControlTemplate>
        </Setter.Value>
    </Setter>
</Style>

    </Window.Resources>

    <Grid Margin="10">

        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>   <!-- Display -->
            <RowDefinition Height="*"/>     <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- ðŸ’— DISPLAY AREA -->
        <Border Grid.Row="0"
                CornerRadius="20"
                Background="White"
                Padding="20"
                Margin="0 0 0 10">
            <Grid>
                <TextBlock Text="{Binding DisplayText}"
                           FontSize="42"
                           FontWeight="Bold"
                           TextAlignment="Right"
                           VerticalAlignment="Bottom"
                           Foreground="#7A306C"/>
            </Grid>
        </Border>

        <!-- ðŸ’— CALCULATOR BUTTONS -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Row 1 -->
            <Button Grid.Row="0" Grid.Column="0" Style="{StaticResource CalcButton}" Content="C"
                    Command="{Binding ClearCommand}"/>
            <Button Grid.Row="0" Grid.Column="1" Style="{StaticResource CalcButton}" Content="Â±"
                    Command="{Binding ToggleSignCommand}"/>
            <Button Grid.Row="0" Grid.Column="2" Style="{StaticResource CalcButton}" Content="%"
                    Command="{Binding PercentageCommand}"/>
            <Button Grid.Row="0" Grid.Column="3" Style="{StaticResource CalcButton}" Content="Ã·"
                    Command="{Binding OperationCommand}" CommandParameter="Ã·"/>

            <!-- Row 2 -->
            <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource CalcButton}" Content="7"
                    Command="{Binding DigitCommand}" CommandParameter="7"/>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource CalcButton}" Content="8"
                    Command="{Binding DigitCommand}" CommandParameter="8"/>
            <Button Grid.Row="1" Grid.Column="2" Style="{StaticResource CalcButton}" Content="9"
                    Command="{Binding DigitCommand}" CommandParameter="9"/>
            <Button Grid.Row="1" Grid.Column="3" Style="{StaticResource CalcButton}" Content="Ã—"
                    Command="{Binding OperationCommand}" CommandParameter="Ã—"/>

            <!-- Row 3 -->
            <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource CalcButton}" Content="4"
                    Command="{Binding DigitCommand}" CommandParameter="4"/>
            <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource CalcButton}" Content="5"
                    Command="{Binding DigitCommand}" CommandParameter="5"/>
            <Button Grid.Row="2" Grid.Column="2" Style="{StaticResource CalcButton}" Content="6"
                    Command="{Binding DigitCommand}" CommandParameter="6"/>
            <Button Grid.Row="2" Grid.Column="3" Style="{StaticResource CalcButton}" Content="-"
                    Command="{Binding OperationCommand}" CommandParameter="-"/>

            <!-- Row 4 -->
            <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource CalcButton}" Content="1"
                    Command="{Binding DigitCommand}" CommandParameter="1"/>
            <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource CalcButton}" Content="2"
                    Command="{Binding DigitCommand}" CommandParameter="2"/>
            <Button Grid.Row="3" Grid.Column="2" Style="{StaticResource CalcButton}" Content="3"
                    Command="{Binding DigitCommand}" CommandParameter="3"/>
            <Button Grid.Row="3" Grid.Column="3" Style="{StaticResource CalcButton}" Content="+"
                    Command="{Binding OperationCommand}" CommandParameter="+"/>

            <!-- Row 5 -->
            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Style="{StaticResource CalcButton}" Content="0"
                    Command="{Binding DigitCommand}" CommandParameter="0"/>
            <Button Grid.Row="4" Grid.Column="2"
                    Style="{StaticResource CalcButton}" Content="."
                    Command="{Binding DigitCommand}" CommandParameter="."/>
            <Button Grid.Row="4" Grid.Column="3"
                    Style="{StaticResource CalcButton}" Content="="
                    Command="{Binding EqualsCommand}"/>
        </Grid>
    </Grid>

</Window>
